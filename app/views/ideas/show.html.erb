        <div class="idea card border-0">
          <div class="card-body">
            <h2 class="card-title"><%= @idea.title %></h2>
            <p class="card-text"><%= @idea.description %></p>
            <small><p>Posted <%= time_ago_in_words(@idea.updated_at) %> ago</p></small>
            <%= link_to("Edit", edit_idea_path(@idea.id), class: "btn btn-outline-primary btn-md") %>
            <%= link_to("Delete", idea_path(@idea.id), method: :delete, data: {confirm: "Delete Idea?"}, class: "btn btn-outline-primary btn-md") %>
          </div>
        </div>