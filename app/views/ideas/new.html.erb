      <%= form_with(model: @idea, local: true) do |form| %>
        <div class="form-group">
          <h3><%= form.label :title %></h3>
          <%= form.text_field :title, value: @idea.title, class: "form-control" %>
        </div>
        <div class="form_group">
          <h3><%= form.label :description %></h3>
          <%= form.text_area :description, cols: 50, rows: 5, value: @idea.description, class: "form-control" %>
        </div>
        <%= form.submit class: "btn btn-outline-primary btn-lg" %>
      <% end %>